// Definizione del tema personalizzato per react-native-paper
const theme = {
  ...DefaultTheme,
  colors: {
    ...DefaultTheme.colors,
    primary: PRIMARY_COLOR,
    secondary: '#FF9800',
  },
};

// Componente principale di navigazione
function NavigationLayout() {
  const { isAuthenticated, isLoading, user } = useAuth();
  const pathname = usePathname();
  
  // Log per debugging
  useEffect(() => {
    logger.log('Layout - isAuthenticated:', isAuthenticated);
    logger.log('Layout - user:', user ? `${user.email} (${user.ruolo})` : 'null');
    logger.log('Layout - pathname:', pathname);
  }, [isAuthenticated, user, pathname]);
  
  // Effetto per le redirezioni di autenticazione
  useEffect(() => {
    if (isLoading) return;
    
    if (!isAuthenticated && pathname !== '/register') {
      // Se non autenticato e non alla pagina di registrazione, 
      // mostra la home (che sar√† sostituita da LoginScreen)
      if (pathname !== '/') {
        logger.log('Layout - Utente non autenticato, reindirizzamento a home');
        router.replace('/');
      }
    } else if (isAuthenticated && pathname === '/') {
      // Se autenticato e alla home, vai ai tabs
      logger.log('Layout - Utente autenticato alla home, reindirizzamento a tabs');
      router.replace('/(tabs)');
    }
  }, [isAuthenticated, isLoading, pathname]);
  
  // Mostra schermata di caricamento durante il caricamento iniziale
  if (isLoading) {
    return (
      <View style={styles.loadingContainer}>
        <ActivityIndicator size="large" color={PRIMARY_COLOR} />
        <Text style={styles.loadingText}>Caricamento in corso...</Text>
      </View>
    );
  }
  
  // Quando non autenticato e su homepage, mostra LoginScreen invece della pagina index
  if (!isAuthenticated && pathname === '/') {
    return <LoginScreen />;
  }
  
  // In tutti gli altri casi, mostra il contenuto normale (inclusa la pagina di registrazione)
  return <Slot />;
}

// Root layout con i provider
export default function RootLayout() {
  return (
    <PaperProvider theme={theme}>
      <GestureHandlerRootView style={{ flex: 1 }}>
        <AuthProvider>
          <NotificheProvider>
            <Stack screenOptions={{ headerShown: false }}>
              <Stack.Screen name="index" />
              <Stack.Screen name="register" />
              <Stack.Screen name="(tabs)" />
            </Stack>
            <NavigationLayout />
            <Toast />
          </NotificheProvider>
        </AuthProvider>
      </GestureHandlerRootView>
    </PaperProvider>
  );
}

